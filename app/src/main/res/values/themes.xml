<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeSafe" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/brightGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->

        <item name="android:statusBarColor">@color/green</item>

        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecondary">@color/white</item>

        <item name="textSizeXXS">8sp</item>
        <item name="textSizeXS">10sp</item>
        <item name="textSizeS">12sp</item>
        <item name="textSizeM">14sp</item>
        <item name="textSizeL">16sp</item>
        <item name="textSizeXL">18sp</item>
        <item name="textSizeXXL">20sp</item>
    </style>

    <style name="LauncherTheme" parent="Theme.WeSafe">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerSize">50%</item>
    </style>
</resources>